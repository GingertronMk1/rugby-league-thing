#!/usr/bin/env sh

echo "Overwriting sqlite"
echo "" > ./database/testing.sqlite

echo "Making sure sail's up"
./vendor/bin/sail up -d

echo "NPM running"
./vendor/bin/sail npm run build

echo "And testing"
./vendor/bin/sail run ./vendor/bin/pest \
    --coverage \
    --min=80 \
    --configuration=phpunit.xml
